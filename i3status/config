general {
	colors = true
	color_good      = '#ffffff'
    color_degraded  = '#ccdc90'
    color_bad       = '#e89393'
}

order += "wireless wlp3s0"
order += "volume master"
order += "tztime berlin"
order += "battery 0"

tztime berlin {
        format = "%H:%M  %d.%m.%Y "
		timezone = "Europe/Berlin"
}

battery 0 {
        format = "%status %percentage "
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

volume master {
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	# termsyn font
	format = "vol: %volume "
}

wireless wlp3s0{
  #if you use %speed, i3status requires root privileges
    format_up = "%ip "
    format_down = ""
}

